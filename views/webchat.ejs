</nav>
<form name="formName" class="center" onsubmit="return check()">
    <h2>Simple Chat</h2>
    <div id="froala-editor">
        <input id="username" name="benutzername" type="text" placeholder="Benutzername">
        <br>
        <textarea id="textarea" name="content" style="width: 50vw; height: 50vh;"></textarea>
        <br>
        <button class="btn btn-primary">Senden</button>
    </div>
</form>

<div class="received-messages">
</div>


<script>
    let exampleSocket = new WebSocket("ws://modul-152-yanik.herokuapp.com/");
    document.querySelector("#submit").addEventListener('click', () => {
        let user = document.getElementById('userName').value;
        let text = document.getElementById('message').value;
        if (user === ''){
            alert('Bitte geben Sie einen Benutzernameein')
        } else if (text === ''){
            alert('Bitte geben Sie eine Nachricht ein')
        }
        else {
            let myData = {
                user: document.getElementById('user').value,
                text: document.getElementById('text').value,

            };
            exampleSocket.send(JSON.stringify(myData));
            $('#content').froalaEditor('html.set', '');
            console.log('submit clicked');
        }
    });
    exampleSocket.onmessage = event => {
        let form = JSON.parse(event.data)
        document.querySelector(".received-messages").innerHTML = `${document.querySelector(".received-messages").innerHTML} <hr class="col-10"><h5><b>${form.user}: </b></h5><p>${form.text}</p><h6>${form.date}</h6>`;
    }

</script>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.js"></script>
